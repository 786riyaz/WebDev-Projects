  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    window.onload = function () {
      const remembered = localStorage.getItem("rememberedUser");
      if (remembered) {
        const role = localStorage.getItem("userRole") || "Admin";
        showPanel(role);
      }
      if (localStorage.getItem("theme") === "light") {
        document.body.classList.add("bg-light", "text-dark");
        document.getElementById("themeIcon").classList.replace("bi-moon-stars", "bi-sun");
      }
    };

    function login() {
      const username = document.getElementById("username").value;
      const password = document.getElementById("password").value;
      const rememberMe = document.getElementById("rememberMe").checked;

      if (username === "masteradmin" && password === "admin123") {
        if (rememberMe) localStorage.setItem("rememberedUser", username);
        localStorage.setItem("userRole", "Master Admin");
        showPanel("Master Admin");
      } else if (username === "admin" && password === "admin123") {
        if (rememberMe) localStorage.setItem("rememberedUser", username);
        localStorage.setItem("userRole", "Admin");
        showPanel("Admin");
      } else {
        alert("Invalid credentials");
      }
    }

    function showPanel(role) {
      document.getElementById("loginPage").style.display = "none";
      document.getElementById("adminPanel").style.display = "block";
      document.getElementById("userGreeting").innerText = `Welcome, ${role}`;

      if (role !== "Master Admin") {
        document.getElementById("masterUserMenu").style.display = "none";
      } else {
        document.getElementById("masterUserMenu").style.display = "block";
      }
    }

    function logout() {
      localStorage.removeItem("rememberedUser");
      localStorage.removeItem("userRole");
      document.getElementById("adminPanel").style.display = "none";
      document.getElementById("loginPage").style.display = "flex";
    }

    function togglePassword() {
      const passwordField = document.getElementById("password");
      const icon = document.getElementById("toggleIcon");
      if (passwordField.type === "password") {
        passwordField.type = "text";
        icon.classList.remove("bi-eye-slash");
        icon.classList.add("bi-eye");
      } else {
        passwordField.type = "password";
        icon.classList.remove("bi-eye");
        icon.classList.add("bi-eye-slash");
      }
    }

    function toggleTheme() {
      const icon = document.getElementById("themeIcon");
      if (document.body.classList.contains("bg-light")) {
        document.body.classList.remove("bg-light", "text-dark");
        localStorage.setItem("theme", "dark");
        icon.classList.replace("bi-sun", "bi-moon-stars");
      } else {
        document.body.classList.add("bg-light", "text-dark");
        localStorage.setItem("theme", "light");
        icon.classList.replace("bi-moon-stars", "bi-sun");
      }
    }
  </script>
</body>


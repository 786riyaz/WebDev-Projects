  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function login() {
      const username = document.getElementById("username").value;
      const password = document.getElementById("password").value;
      const rememberMe = document.getElementById("rememberMe").checked;
      if (username === "masteradmin" && password === "admin123") {
        if (rememberMe) localStorage.setItem("rememberedUser", username);
        localStorage.setItem("userRole", "Master Admin");
        showPanel("Master Admin");
      } else if (username === "admin" && password === "admin123") {
        if (rememberMe) localStorage.setItem("rememberedUser", username);
        localStorage.setItem("userRole", "Admin");
        showPanel("Admin");
      } else {
        alert("Invalid credentials");
      }
    }
    function showPanel(role) {
      document.getElementById("loginPage").style.display = "none";
      document.getElementById("adminPanel").style.display = "block";
      document.getElementById("userGreeting").innerText = `Welcome, ${role}`;
      document.getElementById("masterUserMenu").style.display = role === "Master Admin" ? "block" : "none";
    }
    function logout() {
      localStorage.clear();
      location.reload();
    }
    function togglePassword() {
      const field = document.getElementById("password");
      const icon = document.getElementById("toggleIcon");
      field.type = field.type === "password" ? "text" : "password";
      icon.classList.toggle("bi-eye");
      icon.classList.toggle("bi-eye-slash");
    }
    function toggleTheme() {
      const icon = document.getElementById("themeIcon");
      document.body.classList.toggle("bg-light");
      document.body.classList.toggle("text-dark");
      icon.classList.toggle("bi-sun");
      icon.classList.toggle("bi-moon-stars");
      localStorage.setItem("theme", document.body.classList.contains("bg-light") ? "light" : "dark");
    }
   
  </script>
</body>

</html>


 function toggleTheme() {
      const icon = document.getElementById("themeIcon");
      document.body.classList.toggle("bg-light");
      document.body.classList.toggle("text-dark");
      icon.classList.toggle("bi-sun");
      icon.classList.toggle("bi-moon-stars");
    }

